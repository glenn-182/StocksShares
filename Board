import java.util.ArrayList;
import java.util.Scanner;
import java.util.Random;

public class Board {
	
	private static ArrayList<Player>players;
	private static ArrayList<Card> cards;
	private static Scanner input;
	private static Random randomGenerator;
	
	public Board()
	{
		cards = new ArrayList<Card>();
		players = new  ArrayList<Player>();
		randomGenerator = new Random();
	}

	public static void main(String[] args)
	{
		input = new Scanner(System.in);
		Board app = new Board();
		app.run();
	}
	
	public void addPlayer(Player player)
	{
		player.addPlayer(player);
	}
	
	public ArrayList<Card> getCards()
	{
		return cards;
	}
	
	public static void startGame()
	{
		System.out.println("How many players would you like?");
		int noPlayers = input.nextInt();
		input.nextLine();
		for (int i = 0; i < noPlayers; i++)
		{
			
			System.out.println("What is the 1st name of Player " + (i + 1) + "?" );  
			String name = input.nextLine();
			Player player = new Player (name, 80);
			players.add(player);
		}
		
		int l = 0;
		System.out.println("");
		for (Player player : players)
		{
			System.out.println(player.getName() + " : index " + l);
			l++;
		}
		System.out.println("Enter the index number of the player whho wants to go first: ");
		int index = input.nextInt();
		while (index > 0)
		{
			index = index += 0;
		}
		while(players.size() > 1)
		{
			for (Player player : players)
			{
				playerTurn(player);
			}
		}
		
		
		
	}
	
	public static void playerTurn(Player player)
	{
		
		System.out.println(player.getName() + "'s go");
		generateRandomCard(cards);
		
	}
	
	public static Card generateRandomCard(ArrayList<Card> cards)
	{
		int index = randomGenerator.nextInt(cards.size());
		return cards.get(index);
	}
	
	public void run()
	{
		System.out.println("##### Welcome to Stocks & Shares #####");
		System.out.println("");
		System.out.println("Would you like to play a game? (y/n)");
		String option = input.nextLine();
		if (option.toLowerCase().equals("n"))
		{
			System.out.println("Goodbye");
		}
		else if (option.toLowerCase().equals("y"))
		{
			Board.startGame();
		}
	}
	
	private int mainMenu()
	{
		System.out.println("Stocks and Shares Main Menu");
		System.out.println("---------------------------");
		System.out.println("1)	Start New Game");
		System.out.println("2)	Load Game");
		System.out.println("---------------------------");
		System.out.println("0)	Exit");
		
		int option = input.nextInt();
		return option;
		
	}
	
	public void startMenu()
	{
		int option = mainMenu();
		while (option != 0);
		{
			switch (option)
			{
				case 1:	run();
				
			}
	}
}
	
}
